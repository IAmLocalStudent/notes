Build an Email Masker
const maskEmail = email => {
  const atIndex = email.indexOf("@");
  const username = email.slice(0, atIndex);
  const domain = email.slice(atIndex);

  if (username.length <= 2) {
    // No middle characters to mask
    return username + domain;
  }

  const firstChar = username[0];
  const lastChar = username[username.length - 1];
  const maskedMiddle = "*".repeat(username.length - 2);

  return firstChar + maskedMiddle + lastChar + domain;
};

Build a Card Counting Assistant

let count = 0;
const cc = card => {
  const incNumCards = [2,3,4,5,6];
  const staticNumCards = [7,8,9];
  const charCards = ["J", "Q", "K", "A"];

  if (card > 1 && card < 11) {
    card = Number(card);
    if (incNumCards.includes(card)) {
      count++;
      console.log(count);
    }
    else if (staticNumCards.includes(card)) {
      console.log("count stays neutral");
    }
  } else if {
    card = card.toString();
    if (charCards.includes(card) {
    }
  }
}



console.log(cc(7))
